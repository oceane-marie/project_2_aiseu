<div class="card" data-filter-target="list">
    <% @items.each do |item| %>
    <div class="card-wrapper">
    <div class="card-wrap">
      <div class="card-front">
        <%= image_tag item.photo, width: 300, height:220 %>
      </div>
      <div class="card-back">
        <h4 class='item-name'><%= item.name %></h3>
        <div class='type'>
          <div id="flavor">
            <h5><em><%= item.flavor %></em></h5>
          </div>
          <div id="temp">
            <h5><em><%= item.temp %></em></h5>
          </div>
        </div>
        <p><%= item.description %></p>
        <div class="button">
          <%= link_to item_path(item) do %>
            <button class='btn pink-little'>See</button>
          <% end %>
        </div>
      </div>
    </div>
    </div>
    <% end %>

</div>
