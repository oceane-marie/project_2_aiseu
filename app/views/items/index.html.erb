  <button class='btn purple-big btn-left' id='btn-scroll'>Discover</button>
</header>

<div data-controller="filter">
  <div class='right h-150'>
    <%= form_with url: '/', id: "form-temp", class:"form", remote: true, method: :get do |f| %>
      <div class="checkbox">
        <%= check_box_tag :temp, 'iced', false, data: { action: "change->filter#sortbytemp", filter_target: 'tempcheckbox' } %>
         <%= f.label :temp, "iced" %>
      </div>
      <div class="checkbox">
        <%= f.label :temp, "classic" %>
        <%= check_box_tag :temp, 'classic', false, data: { action: "change->filter#sortbytemp", filter_target: 'tempcheckbox' } %>
      </div>
    <% end %>
  </div>

<div class="ctr">
  <div class='nav side border-side'>
  <h3>Pick a flavor</h2>
  <%= form_with url: '/', id: "form-flavor", class:"form", remote: true, method: :get do |f| %>
      <div class="checkbox">
        <%= f.label :flavor, "chocolate" %>
        <%= check_box_tag :flavor, 'chocolate', false, data: { action: "change->filter#sortbyflavor", filter_target: 'flavorcheckbox' } %>
      </div>
      <div class="checkbox">
        <%= f.label :flavor, "fruits" %>
        <%= check_box_tag :flavor, 'fruits', false, data: { action: "change->filter#sortbyflavor", filter_target: 'flavorcheckbox' } %>
      </div>
      <div class="checkbox">
        <%= f.label :flavor, "nuts" %>
        <%= check_box_tag :flavor, 'nuts', false, data: { action: "change->filter#sortbyflavor", filter_target: 'flavorcheckbox' } %>
      </div>
      <div class="checkbox">
        <%= f.label :flavor, "tea/coffe" %>
        <%= check_box_tag :flavor, 'tea/coffee', false, data: { action: "change->filter#sortbyflavor", filter_target: 'flavorcheckbox' } %>
      </div>
    <% end %>
  </div>


